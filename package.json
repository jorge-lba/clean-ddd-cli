{
  "name": "clean-ddd-cli",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "license": "MIT",
  "bin": {
    "clean-ddd-cli": "./dist/index.js"
  },
  "dependencies": {
    "string-replace-stream": "^0.0.2",
    "yargs": "^17.5.1"
  },
  "scripts": {
    "test": "jest --bail --silent",
    "test:stage": "jest $(git ls-files --other --modified --exclude-standard | grep \".spec.ts\")",
    "test:stage:watch": "yarn nodemon -e spec.ts -x \"yarn test:stage --watch --bail && echo\"",
    "test:heap:inspect": "node --inspect-brk node_modules/.bin/jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc/core": "^1.3.26",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.7.23",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "docsify-cli": "^4.4.4",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "files": [
    "dist",
    "src/base"
  ],
  "licenses": [
    "MIT"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest"
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "maxWorkers": "40%",
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@root(.*)$": "<rootDir>/src$1",
      "^@modules(.*)$": "<rootDir>/modules$1",
      "^@infra(.*)$": "<rootDir>/infra$1",
      "^@core(.*)$": "<rootDir>/core$1",
      "^@configs(.*)$": "<rootDir>/configs$1",
      "^@providers(.*)$": "<rootDir>/providers$1",
      "^@shared(.*)$": "<rootDir>/shared$1",
      "^@dto(.*)$": "<rootDir>/dto$1",
      "^@test(.*)$": "<rootDir>/../test$1"
    }
  }
}
